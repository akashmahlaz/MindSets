rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read and write their own profile
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      
      // Any authenticated user can read other users' PUBLIC profile data
      // This is needed for: getCounsellors(), getAllUsers(), viewing counsellor profiles
      allow read: if isAuthenticated();
      
      // Admins can read all user profiles for management
      allow read: if isAdmin();
      
      // Allow admins to update any user (for verification, role changes, etc.)
      allow update: if isAdmin();
    }
    
    // Notifications - users can read their own notifications
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && request.auth.uid == resource.data.userId;
      allow read: if isAdmin();
      // Admins can create notifications
      allow create: if isAdmin();
      // System can create notifications (for any authenticated user)
      allow create: if isAuthenticated();
      // Users can update their own notifications (mark as read)
      allow update: if isAuthenticated() && request.auth.uid == resource.data.userId;
    }
    
    // Chat documents
    match /chats/{chatId} {
      allow read, write: if isAuthenticated();
    }
    
    // Sessions collection
    match /sessions/{sessionId} {
      allow read, write: if isAuthenticated();
    }
    
    // Articles/Stories collection
    match /articles/{articleId} {
      // Anyone authenticated can read articles
      allow read: if isAuthenticated();
      
      // Any authenticated user can create articles
      allow create: if isAuthenticated();
      
      // Users can update/delete their own articles
      allow update, delete: if isAuthenticated() && 
        resource.data.authorId == request.auth.uid;
      
      // Admins can update/delete any article
      allow update, delete: if isAdmin();
    }
    
    // Reviews collection - for counsellor reviews
    match /reviews/{reviewId} {
      // Anyone authenticated can read reviews
      allow read: if isAuthenticated();
      
      // Authenticated users can create reviews
      allow create: if isAuthenticated();
      
      // Users can update/delete their own reviews
      allow update, delete: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      
      // Admins can manage any review (moderation)
      allow update, delete: if isAdmin();
    }
    
    // Counsellor Stats collection - for rating aggregations
    match /counsellorStats/{counsellorId} {
      // Anyone authenticated can read stats
      allow read: if isAuthenticated();
      
      // Stats are updated when reviews are created (system operation)
      allow write: if isAuthenticated();
    }
    
    // Messages subcollection (if used in chats)
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if isAuthenticated();
    }
    
    // Mood Entries collection - for mood tracking
    match /moodEntries/{entryId} {
      // Users can read their own mood entries
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Users can create mood entries for themselves
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Users can update/delete their own mood entries
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Admins can read all mood entries (for analytics)
      allow read: if isAdmin();
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
